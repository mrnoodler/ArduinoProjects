int a = 4;
int b = 5;
int c = 7;
int d = 8;
int e = 9;
int f = 10;
int g = 11;
int dp = 6;


void setup() {
  pinMode(a, OUTPUT);
  pinMode(b, OUTPUT);
  pinMode(c, OUTPUT);
  pinMode(d, OUTPUT);
  pinMode(e, OUTPUT);
  pinMode(f, OUTPUT);
  pinMode(g, OUTPUT);
  pinMode(dp, OUTPUT);
}

void loop() 
{
  Eight();
  Switch();

  Zero();
  Switch();

  Zero();
  Switch();

  Eight();
  Switch();

  One();
  Switch();

  Three();
  Switch();
  
  Five();
  Switch();

  delay(1000);

  Bb();
  Switch();

  Zero();
  Switch();

  Zero();
  Switch();

  Bb();
  Switch();

  One();
  Switch();

  Ee();
  Switch();

  Five();
  Switch();

  delay (1000);

  //For Testing:
  /*
  Zero();
  Switch();

  One();
  Switch();

  Two();
  Switch();

  Three();
  Switch();

  Four();
  Switch();

  Five();
  Switch();

  Six();
  Switch();

  Seven();
  Switch();

  Eight();
  Switch();

  Nine();
  Switch();

  Aa();
  Switch();

  Bb();
  Switch();

  Cc();
  Switch();

  Dd();
  Switch();

  Ee();
  Switch();

  Ff();
  Switch();
  */
}

void Switch(){
  delay(500);
  Reset();
  delay(500);
}

void Reset(){
  digitalWrite(a, HIGH);
  digitalWrite(b, HIGH);
  digitalWrite(c, HIGH);
  digitalWrite(d, HIGH);
  digitalWrite(e, HIGH);
  digitalWrite(f, HIGH);
  digitalWrite(g, HIGH);
  digitalWrite(dp, HIGH);
}

void Zero(){
  digitalWrite(a, LOW);
  digitalWrite(b, LOW);
  digitalWrite(c, LOW);
  digitalWrite(d, LOW);
  digitalWrite(e, LOW);
  digitalWrite(f, LOW);
  digitalWrite(g, HIGH);
  digitalWrite(dp, HIGH);
}
void One(){
  digitalWrite(a, HIGH);
  digitalWrite(b, LOW);
  digitalWrite(c, LOW);
  digitalWrite(d, HIGH);
  digitalWrite(e, HIGH);
  digitalWrite(f, HIGH);
  digitalWrite(g, HIGH);
  digitalWrite(dp, HIGH);
}
void Two(){
  digitalWrite(a, LOW);
  digitalWrite(b, LOW);
  digitalWrite(c, HIGH);
  digitalWrite(d, LOW);
  digitalWrite(e, LOW);
  digitalWrite(f, HIGH);
  digitalWrite(g, LOW);
  digitalWrite(dp, HIGH);
